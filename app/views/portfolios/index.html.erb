<h1>Portfolio Items </h1>


<%= link_to "Create New Item", new_portfolio_path %>
<% @portfolio_items.each do |porfolio_item| %>
  <p><%=porfolio_item.title %></p>
  <p><%=porfolio_item.subtitle %></p>
  <p><%=porfolio_item.body %></p>
  <p><%=image_tag porfolio_item.thumg_image unless porfolio_item.thumg_image.nil? %></p>
  <p><%=link_to "Edit", edit_portfolio_path(porfolio_item) %></p>
  <br>
  <br>
<% end %>